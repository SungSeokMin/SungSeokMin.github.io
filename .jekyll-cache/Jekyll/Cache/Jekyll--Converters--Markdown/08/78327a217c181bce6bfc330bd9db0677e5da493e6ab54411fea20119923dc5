import { LOGIN, LOGOUT } from '../actions';

const initalState = {...};

                    // es6 ë¬¸ë²•, defaultê°’ ì„ ì–¸
const userReducer = (state = initialState, action ) =&gt; {
  switch(action.type) {
    case LOGIN:
    return {
      ...
    }
    case LOGOUT:
    return {
      ...
    }
    default:
      return state;
  }
}

export default userReducer;
