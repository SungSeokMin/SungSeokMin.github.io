<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code>import React, { useReducer } from 'react';

// reducer =&gt; stateë¥¼ ë³€ê²½í•˜ëŠ” ë¡œì§ì´ ë‹´ê²¨ìˆëŠ” í•¨ìˆ˜
const reducer = (prevState, action) =&gt; {
  if (action.type === 'PLUS') {
    return { count: prevState.count + 1 };
  }

  return prevState;
};

// dispatch =&gt; action ê°ì²´ë¥¼ ë„£ì–´ì„œ ì‹¤í–‰

// action =&gt; ê°ì²´ì´ê³  í•„ìˆ˜ í”„ë¡œí¼í‹°ë¡œ typeì„ ê°€ì§„ë‹¤.

const Example6 = () =&gt; {
  const [state, dispatch] = useReducer(reducer, { count: 0 });
  return (
    &lt;div&gt;
      &lt;p&gt;You Clicked {state.count} times&lt;/p&gt;
      &lt;button onClick={click}&gt;Click me&lt;/button&gt;
    &lt;/div&gt;
  );

  function click() {
    dispatch({ type: 'PLUS' });
  }
};

export default Example6;
</code></pre></div></div>
