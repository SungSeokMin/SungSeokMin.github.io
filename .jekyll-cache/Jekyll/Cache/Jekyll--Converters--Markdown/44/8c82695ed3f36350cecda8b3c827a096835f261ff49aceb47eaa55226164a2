<h3 id="redux-pattern">Redux Pattern</h3>

<p>actions.ts</p>

<div class="language-plaintext highlighter-rouge"><div class="highlight"><pre class="highlight"><code>// typesafe-actions ? action, reducerë¥¼ ë³´ë‹¤ í¸í•œíˆ ì‚¬ìš©í•˜ê¸° ìœ„í•œ ë¼ì´ë¸ŒëŸ¬ë¦¬
import { deprecated } from 'typesafe-actions';
const { createStandardAction } = deprecated;

export const ADD_TODO = 'todos/ADD_TODO' as const;
export const TOGGLE_TODO = 'todos/TOGGLE_TODO';
export const REMOVE_TODO = 'todos/REMOVE_TODO';

// ê²Œì‹œê¸€ ë²ˆí˜¸ë¥¼ ìœ„í•´ ë³€ìˆ˜ ìƒì„±
let nextId = 1;

export const addTodo = (text: string) =&gt; ({
  type: ADD_TODO,
  payload: {
    id: nextId++,
    text,
  },
});

export const toggleTodo = createStandardAction(TOGGLE_TODO)&lt;number&gt;();
export const removeTodo = createStandardAction(REMOVE_TODO)&lt;number&gt;();
</code></pre></div></div>
